{
  "tasks": {
    "start":      "deno run -NRES --allow-ffi -W=$HOME/.cache/deno/plug --env-file server.js",
    "dev":        "deno run -NRES --allow-ffi -W=$HOME/.cache/deno/plug --env-file --watch server.js",
    "test":       "deno test -NE --env-file test/*.js",
    "lint":       "deno run -A npm:eslint",
    "check-deps": "deno run -A jsr:@check/deps"
  },
  "imports": {
    "@db/sqlite":          "jsr:@db/sqlite@^0",
    "@danet/handlebars":   "jsr:@danet/handlebars@^0",
    "@eslint/js":          "npm:@eslint/js@^9",
    "@oak/oak":            "jsr:@oak/oak@^17",
    "@std/assert":         "jsr:@std/assert@^1",
    "debug":               "npm:debug@^4",
    "eslint-plugin-jsdoc": "npm:eslint-plugin-jsdoc@^50",
    "globals":             "npm:globals@^15",
    "handlebars":          "npm:handlebars@^4",
    "jsonwebtoken":        "npm:jsonwebtoken@^9",
    "linkedom":            "npm:linkedom@^0.18",
    "marked":              "npm:marked@^15",
    "nodemailer":          "npm:nodemailer@^6",
    "oak_sessions":        "https://deno.land/x/oak_sessions/mod.ts",
    "scrypt-kdf":          "npm:scrypt-kdf@^3"
  },
  "compilerOptions": {
    "types": [
        "./@types/lib/jwt-auth.d.ts",
        "./@types/lib/mail.d.ts"
    ]
  },
  "lock": false
}
