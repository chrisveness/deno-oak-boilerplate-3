{
  "tasks": {
    "start":      "deno run -NRES -W=app.db --env-file server.js",
    "dev":        "deno run -NRES -W=app.db --env-file --watch server.js",
    "test":       "deno test -NE --env-file test/*.js",
    "lint":       "deno run -RE npm:eslint",
    "check-deps": "deno run -NR jsr:@check/deps"
  },
  "imports": {
    "@danet/handlebars":   "jsr:@danet/handlebars@^0.0",
    "@eslint/js":          "npm:@eslint/js@^9",
    "@oak/oak":            "jsr:@oak/oak@^17",
    "@std/assert":         "jsr:@std/assert@^1",
    "debug":               "npm:debug@^4",
    "eslint-plugin-jsdoc": "npm:eslint-plugin-jsdoc@^61",
    "globals":             "npm:globals@^16",
    "handlebars":          "npm:handlebars@^4",
    "jsonwebtoken":        "npm:jsonwebtoken@^9",
    "linkedom":            "npm:linkedom@^0.18",
    "marked":              "npm:marked@^16",
    "nodemailer":          "npm:nodemailer@^7",
    "oak_sessions":        "https://deno.land/x/oak_sessions/mod.ts",
    "scrypt-kdf":          "npm:scrypt-kdf@4"
  },
  "compilerOptions": {
    "types": [
        "./@types/lib/jwt-auth.d.ts",
        "./@types/lib/mail.d.ts"
    ]
  },
  "lock": false
}
